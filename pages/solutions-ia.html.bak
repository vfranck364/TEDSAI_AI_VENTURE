        .language-switcher {
            position: relative;
            display: inline-block;
            margin-left: 15px
        }

        .lang-current {
            background: var(--color-secondary);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: .95rem;
            transition: all .3s;
            box-shadow: 0 2px 8px rgba(0, 0, 0, .15);
            display: flex;
            align-items: center;
            gap: 8px
        }

        .lang-current:hover {
            background: var(--color-primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 0, 0, .2)
        }

        .lang-current i {
            font-size: 1.1rem
        }

        .lang-dropdown {
            display: none;
            position: absolute;
            top: calc(100% + 8px);
            right: 0;
            background: white;
            box-shadow: 0 8px 24px rgba(0, 0, 0, .2);
            border-radius: 12px;
            margin-top: 8px;
            min-width: 220px;
            z-index: 1000;
            overflow: hidden;
            animation: slideDown .3s ease
        }

        .lang-dropdown.active {
            display: block
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px)
            }

            to {
                opacity: 1;
                transform: translateY(0)
            }
        }

        .lang-dropdown a {
            display: block;
            padding: 14px 18px;
            color: #333;
            text-decoration: none;
            transition: background .2s;
            cursor: pointer;
            font-size: .95rem;
            border-bottom: 1px solid #f0f0f0
        }

        .lang-dropdown a:last-child {
            border-bottom: none
        }

        .lang-dropdown a:hover {
            background: #f8f9fa;
            color: var(--color-primary)
        }

        .lang-dropdown a.active-lang {
            background: #e8f4f8;
            color: var(--color-primary);
            font-weight: 600
        }
    </style>
