rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Dossier public (lecture seule)
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // Dossier utilisateurs (priv√©)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == userId;
    }
    
    // Dossier temporaire (auto-suppression 7 jours)
    match /temp/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
